#ALIAS {/ayuda} {
    /message {Comandos disponibles en RL++};
    #SHOWME {};
    #SHOWME {<fac>/cargarAliasesBasicos <acd>Establece aliases básicos en una nueva ficha.<099>};
    #SHOWME {<fac>/cargarAliasesBribon <acd>Establece aliases para sigilar y esconderse en una nueva ficha.<099>};
    #SHOWME {<fac>/conectar <acd>Conecta a Reinos de Leyenda MUD.<099>};
    #SHOWME {<fac>/limpiar <acd>Borra el contenido de la pantalla.<099>};
    #SHOWME {<fac>/log <on|off> <acd>Activa o desactiva el logeado. Los logs se guardan en el directorio /logs.<099>};
    #SHOWME {<fac>/reload <acd>Recarga el script. Sólo funciona en modo desarrollo.<099>};
    #SHOWME {<fac>/rumbo <dirección> <acd>Camina automáticamente en una dirección, de forma similar al comando "galopar".<099>};
    #SHOWME {<fac>/x <acd>Computa una lista de enemigos.<099>};
    #SHOWME {};
};

#ALIAS {/conectar} {
    #SESSION rl rlmud.org 5001;
};

#ALIAS {/limpiar} {
    #system {tput clear};
};

#ALIAS {/cargarAliasesBasicos} {
    charset UTF-8;
    inform todo on;
    consentir tiradas on;
    consentir detallado off;
    consentir menus off;
    alias save salvar;
    alias g ojear $*$;
    alias l mirar $*$;
    alias quit salir;
    alias scc sc -v;
    alias sca sc -a;
    alias tar nick tar $*$;
    alias k matar $arg:tar$;
    alias atar anick tar $*$;
    alias mtar mnick tar $*$;
    alias qtar qnick tar $*$;
    alias fi finger $arg:me$;
    alias q estado $arg:tar$;
    alias qq estado todo;
    alias en enterrar $*$;
    alias b buscar $*$;
    alias p perder $arg:todo$;
    alias pp peleas parar;
    alias est estatus $*$;
    alias dip diplomacia $*$;
    alias hab habilidades $*$;
    alias ma maestria $*$;
    alias mp maestria arma;
    alias env envainar $arg:arma$;
    alias emp empuñar $arg:arma$;
    alias arma nick arma $*$\;alias mp maestria $*$;
    alias ap abrir $*$;
    alias cp cerrar $*$;
    alias mm mirarme;
    alias cv conversar $*$;
    alias cm coger monedas de cuerpos;
    alias x noticias $*$;
    alias fc ficha cuenta $*$;
    alias lev levantarse;
    alias aga agacharse;
    alias xp experiencia $*$;
    alias obj nick obj $*$;
    alias bp mirar obj;
    alias gt coger $*$ de obj;
    alias pt poner $*$ en obj;
};

#ALIAS {/cargarAliasesBribon} {
    alias h esconderse $*$;
    alias E sigilar este;
    alias NE sigilar noreste;
    alias N sigilar norte;
    alias NO sigilar noroeste;
    alias O sigilar oeste;
    alias SO sigilar sudoeste;
    alias S sigilar sur;
    alias SE sigilar sudeste;
    alias AR sigilar arriba;
    alias AB sigilar abajo;
    alias DE sigilar dentro;
    alias FU sigilar fuera;  
};

#ALIAS {/message} {
    #SHOWME {$rl_config[message_prefix]$rl_config[message_color] %1<099>};
};

#ALIAS {/message_cooldown} {
    #SHOWME {<169>☀<099>  <139>Habilidad disponible: <178>%1<099>};
};

#IF {$_development == 1} {
    #ALIAS {/reload} {
        /message {Recargando...};
        #KILL {all};
        #READ {src/main.tin};
        /message {RL++ recargado satisfactoriamente.};
    };
};

#CLASS {RL_ALIAS} {close};
