#CLASS {RL_MARKSMAN} {kill};
#CLASS {RL_MARKSMAN} {open};

/**********************************************************************************************************************
 * Module RL_MARKSMAN                                                                                                 *
 *                                                                                                                    *
 * Functionalities for the marksman class.                                                                            *
 **********************************************************************************************************************/

/register_module {RL_MARKSMAN} {Test module} {Just to show how it is done.};
/add_module_setting {RL_MARKSMAN} {foo} {enum} {lorem;ipsum} {lorem} {Just an enumeration setting};
/add_module_setting {RL_MARKSMAN} {bar} {number} {} {50} {Just a number setting};

/**********************************************************************************************************************
 * Actions                                                                                                            *
 **********************************************************************************************************************/

#ACTION {^Preparas tu %* y te dispones a disparar contra %*.$} {
    
};

#ACTION {^¡Lanzas un disparocertero contra %*!} {
    #DELAY {11} {
        /message_cooldown {Disparo certero};
    };
};

#ACTION {^¡Descargas una salva de %*} {
    #DELAY {20} {
        /message_cooldown {Salva};
    };    
};

#ACTION {^# ¡Impactas a %* con un fugaz disparo incapacitador que le atraviesa %*!$} {
    #DELAY {60} {
        /message_cooldown {Disparo incapacitador};
    };    
};

#ACTION {T{ú|u} y tu %* os fund{í|i}s en uno %*} {
    #SHOWME {Ok};
    #CLASS {RL_MARKSMAN_PERFECT_IMPL} {open};
    #VAR {perfect_shot_countdown} {10};
    #ACTION {^Contin{ú|u}as preparando tu disparo perfecto contra %*.$} {
        #MATH {perfect_shot_countdown} {$perfect_shot_countdown - 1};
        #SHOWME {Turno: $perfect_shot_countdown};
    };
    #ACTION {^¡Finalmente, liberas contra %* el disparo apuntado que tanto hab{í|i}as preparado!$} {
        #UNVAR {perfect_shot_countdown};
        #CLASS {RL_MARKSMAN_PERFECT_IMPL} {kill};
    };
    #ACTION {^Tus ojos te duelen de no parpadear y no eres capaz de aguantar m{á|a}s la respiración...} {
        #UNVAR {perfect_shot_countdown};
        #CLASS {RL_MARKSMAN_PERFECT_IMPL} {kill};
    };
    #CLASS {RL_MARKSMAN_PERFECT_IMPL} {close};
};

